{{!-- PING BUOY --}}
<div class='wrapperConfig'>
	<h2 class='configHeader'>Ping Buoy</h2>
	<p class='description'>Ping a Buoy to test for communication</p>	
	<table class="tbl-secret" cellspacing="0" cellpadding="0">
		<tr>
			<th></th>
			<th>last successful ping</th>
		</tr>
		{{#each record in model.buoys}}
		<tr>
			<td>
				{{#if record.pinged}}
				<button class="btn-sml btn-pinged" {{action "pingBuoy" record}}> 
					{{record.name}} Pinged
				</button>
				{{else}}
					{{#if record.loading}}
					<button class="btn-sml btn-pinged" {{action "pingBuoy" record}}> 
						Loading...
					</button>
					{{else}}
					<button class="btn-sml btn-ping" {{action "pingBuoy" record}}> 
						Ping {{record.name}} 
					</button>
					{{/if}}
				{{/if}}
			</td>
			<td>{{convert-unix record.last_ping}}</td>
		</tr>
		{{/each}}
	</table>
</div>











