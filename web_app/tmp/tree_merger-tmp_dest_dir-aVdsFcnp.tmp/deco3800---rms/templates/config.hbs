{{!-- CONFIG SENSOR TABLE --}}
<div class='wrapperConfig'>
	<h2 class='configHeader'>Config Sensors</h2>
	<p class='description'>All sensors can be viewed and configured here</p>

	<table class="tbl" cellspacing="0" cellpadding="0">
	  	<tr>
			<th>ID</th>
			<th>Name</th>
			<th>Description</th>
			<th>Unit</th>
			<th>Upper Bound</th>
			<th>Lower Bound</th>
			<th></th>
		</tr>
	  {{#each record in model.sensors}}
		  <tr>
		  	{{#if record.edit}}
				<td>{{record.ID}}</td>
				<td>{{input type="text" class="textinput" value=record.name}}</td>
				<td>{{input type="text" class="textinput" value=record.description}}</td>
				<td>{{input type="text" class="textinput" value=record.unit}}</td>
				<td>{{input type="text" class="textinput" value=record.bound_upper}}</td>
				<td>{{input type="text" class="textinput" value=record.bound_lower}}</td>
			    <td>
			    	<button id="save" {{action "saveSensor" record}}> Save </button>
			    </td>
			{{else}}
			    <td>{{record.ID}}</td>
			    <td>{{record.name}}</td>
			    <td>{{record.description}}</td>
			    <td>{{record.unit}}</td>
			    <td>{{record.bound_upper}}</td>
			    <td>{{record.bound_lower}}</td>
			    <td> 
			    	<button id="edit" {{action "editSensor" record}}> Edit </button>
			    </td>
			{{/if}}
		  </tr>
	  {{/each}}

	</table>
</div>

